.content {
  padding-top: var(--status-bar0-height);
}
.top-bar {
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: var(--status-bar0-height);
}
.top-bar .top-bar-left {
  float: left;
  padding: 0 48rpx;
}
.top-bar .top-bar-left image {
  padding-top: 10rpx;
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.top-bar .top-bar-left .back-img {
  margin-top: 21rpx;
  width: 36rpx;
  height: 46rpx;
}
.top-bar .top-bar-center {
  text-align: center;
  left: 240rpx;
  right: 240rpx;
  top: 0;
  bottom: 0;
  margin: 0 auto;
  position: absolute;
}
.top-bar .top-bar-center .logo {
  padding-top: 11rpx;
  width: 72rpx;
  height: 66rpx;
}
.top-bar .top-bar-center .title {
  font-size: 40rpx;
  color: #272832;
  line-height: 88rpx;
  font-weight: 500;
}
.top-bar .top-bar-right {
  float: right;
  padding-right: 14rpx;
}
.top-bar .top-bar-right .search {
  width: 88rpx;
  height: 88rpx;
  display: inline-block;
}
.top-bar .top-bar-right .add {
  width: 88rpx;
  height: 88rpx;
  padding-right: 15rpx;
  display: inline-block;
}
.top-bar .top-bar-right .text {
  font-size: 32rpx;
  font-weight: 600;
  color: #272832;
  line-height: 88rpx;
  padding-right: 20rpx;
}
.top-bar .top-bar-right .more-img {
  height: 88rpx;
  padding-right: 32rpx;
}
.top-bar .top-bar-right .more-img image {
  width: 52rpx;
  height: 52rpx;
}
.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  padding-top: 10rpx;
  padding-bottom: var(--status-bar0-height);
}
.btn {
  text-align: center;
  line-height: 80rpx;
  width: 684rpx;
  height: 80rpx;
  border-radius: 10rpx;
  color: #272832;
}
page {
  height: 100%;
}
.content {
  height: 100%;
  background-color: rgba(244, 244, 244, 0.96);
}
.top-bar {
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
  background-color: #f4f4f4;
}
.top-bar .group-img {
  position: absolute;
  right: 32rpx;
  bottom: 10rpx;
  width: 68rpx;
  height: 68rpx;
}
.top-bar .group-img image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.chat {
  height: 100%;
}
.chat .chat-main {
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 100rpx;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
}
.chat .chat-ls .chat-time {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.3);
  line-height: 34rpx;
  padding: 20rpx 0;
  text-align: center;
}
.chat .chat-ls .msg-m {
  display: flex;
  padding: 20rpx 0;
}
.chat .chat-ls .msg-m .user-img {
  flex: none;
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.chat .chat-ls .msg-m .message {
  flex: none;
  max-width: 480rpx;
}
.chat .chat-ls .msg-m .msg-text {
  font-size: 32rpx;
  color: #272832;
  line-height: 44rpx;
  padding: 18rpx 24rpx;
}
.chat .chat-ls .msg-m .msg-img {
  max-width: 400rpx;
  border-radius: 20rpx;
}
.chat .chat-ls .msg-left {
  flex-direction: row;
}
.chat .chat-ls .msg-left .msg-text {
  margin-left: 16rpx;
  background-color: #fff;
  border-radius: 0rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-left .msg-img {
  margin-left: 16rpx;
}
.chat .chat-ls .msg-right {
  flex-direction: row-reverse;
}
.chat .chat-ls .msg-right .msg-text {
  margin-right: 16rpx;
  background-color: #ffe431;
  border-radius: 20rpx 0rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-right .msg-img {
  margin-right: 16rpx;
}

