.content {
  padding-top: var(--status-bar0-height);
}
.top-bar {
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: var(--status-bar0-height);
}
.top-bar .top-bar-left {
  float: left;
  padding: 0 48rpx;
}
.top-bar .top-bar-left image {
  padding-top: 10rpx;
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.top-bar .top-bar-left .back-img {
  margin-top: 21rpx;
  width: 36rpx;
  height: 46rpx;
}
.top-bar .top-bar-center {
  text-align: center;
  left: 240rpx;
  right: 240rpx;
  top: 0;
  bottom: 0;
  margin: 0 auto;
  position: absolute;
}
.top-bar .top-bar-center .logo {
  padding-top: 11rpx;
  width: 72rpx;
  height: 66rpx;
}
.top-bar .top-bar-center .title {
  font-size: 40rpx;
  color: #272832;
  line-height: 88rpx;
  font-weight: 500;
}
.top-bar .top-bar-right {
  float: right;
  padding-right: 14rpx;
}
.top-bar .top-bar-right .search {
  width: 88rpx;
  height: 88rpx;
  display: inline-block;
}
.top-bar .top-bar-right .add {
  width: 88rpx;
  height: 88rpx;
  padding-right: 15rpx;
  display: inline-block;
}
.top-bar .top-bar-right .text {
  font-size: 32rpx;
  font-weight: 600;
  color: #272832;
  line-height: 88rpx;
  padding-right: 20rpx;
}
.top-bar .top-bar-right .more-img {
  height: 88rpx;
  padding-right: 32rpx;
}
.top-bar .top-bar-right .more-img image {
  width: 52rpx;
  height: 52rpx;
}
.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  padding-top: 10rpx;
  padding-bottom: var(--status-bar0-height);
}
.btn {
  text-align: center;
  line-height: 80rpx;
  width: 684rpx;
  height: 80rpx;
  border-radius: 10rpx;
  color: #272832;
}
.top-bar {
  background: rgba(255, 255, 255, 0.95);
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.top-bar .search-div {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
  box-sizing: border-box;
  padding: 14rpx 118rpx 14rpx 40rpx;
}
.top-bar .search {
  padding: 0 60rpx 0 12rpx;
  height: 60rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
}
.top-bar .search-img {
  position: absolute;
  right: 130rpx;
  top: 22rpx;
  width: 40rpx;
  height: 40rpx;
}
.main {
  padding: 88rpx 32rpx;
}
.main .result {
  padding-top: 32rpx;
}
.main .result .title {
  font-size: 44rpx;
  font-weight: 600;
  color: #272832;
  line-height: 60rpx;
}
.main .result .list {
  width: 100%;
  padding: 20rpx 0;
  height: 80rpx;
}
.main .result .list image {
  float: left;
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.main .result .names {
  float: left;
  padding-left: 32rpx;
}
.main .result .name {
  font-size: 36rpx;
  color: #272832;
  line-height: 50rpx;
}
.main .result .email {
  font-size: 24rpx;
  color: #272832;
  line-height: 28rpx;
}
.main .result .right-btn {
  float: right;
  width: 120rpx;
  height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  line-height: 48rpx;
  margin-top: 16rpx;
  text-align: center;
}
.main .result .send-msg {
  background: #ffe431;
  color: #272832;
}
.main .result .add-msg {
  background: rgba(74, 170, 255, 0.1);
  color: #5799ff;
}

