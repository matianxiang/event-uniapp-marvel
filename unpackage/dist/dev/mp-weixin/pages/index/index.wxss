.content {
  padding-top: var(--status-bar0-height);
}
.top-bar {
  position: fixed;
  z-index: 1000;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  padding-top: var(--status-bar0-height);
}
.top-bar .top-bar-left {
  float: left;
  padding: 0 48rpx;
}
.top-bar .top-bar-left image {
  padding-top: 10rpx;
  width: 68rpx;
  height: 68rpx;
  border-radius: 16rpx;
}
.top-bar .top-bar-left .back-img {
  margin-top: 21rpx;
  width: 36rpx;
  height: 46rpx;
}
.top-bar .top-bar-center {
  text-align: center;
  left: 240rpx;
  right: 240rpx;
  top: 0;
  bottom: 0;
  margin: 0 auto;
  position: absolute;
}
.top-bar .top-bar-center .logo {
  padding-top: 11rpx;
  width: 72rpx;
  height: 66rpx;
}
.top-bar .top-bar-center .title {
  font-size: 40rpx;
  color: #272832;
  line-height: 88rpx;
  font-weight: 500;
}
.top-bar .top-bar-right {
  float: right;
  padding-right: 14rpx;
}
.top-bar .top-bar-right .search {
  width: 88rpx;
  height: 88rpx;
  display: inline-block;
}
.top-bar .top-bar-right .add {
  width: 88rpx;
  height: 88rpx;
  padding-right: 15rpx;
  display: inline-block;
}
.top-bar .top-bar-right .text {
  font-size: 32rpx;
  font-weight: 600;
  color: #272832;
  line-height: 88rpx;
  padding-right: 20rpx;
}
.top-bar .top-bar-right .more-img {
  height: 88rpx;
  padding-right: 32rpx;
}
.top-bar .top-bar-right .more-img image {
  width: 52rpx;
  height: 52rpx;
}
.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  padding-top: 10rpx;
  padding-bottom: var(--status-bar0-height);
}
.btn {
  text-align: center;
  line-height: 80rpx;
  width: 684rpx;
  height: 80rpx;
  border-radius: 10rpx;
  color: #272832;
}
.content {
  padding-bottom: 32rpx;
}
.top-bar {
  background: rgba(255, 255, 255, 0.95);
  border-bottom: 1px solid rgba(39, 40, 50, 0.1);
}
.top-bar .top-bar-right image {
  padding: 18rpx 0 0 18rpx;
  width: 52rpx;
  height: 52rpx;
}
.main {
  width: 100%;
  padding-top: 100rpx;
}
.friend-list {
  height: 96rpx;
  padding: 16rpx 32rpx;
}
.friend-list:active {
  background-color: #f3f4f6;
}
.friend-list .friend-list-l {
  position: relative;
  float: left;
}
.friend-list .friend-list-l image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  background-color: #ffe431;
}
.friend-list .friend-list-l .tip {
  position: absolute;
  z-index: 10;
  top: -6rpx;
  left: 68rpx;
  min-width: 20rpx;
  padding: 0 8rpx;
  height: 36rpx;
  background: #ff5d5b;
  border-radius: 18rpx;
  font-size: 24rpx;
  color: #fff;
  line-height: 36rpx;
  text-align: center;
}
.friend-list .friend-list-r {
  padding-left: 128rpx;
}
.friend-list .friend-list-r .top {
  height: 50rpx;
}
.friend-list .friend-list-r .top .name {
  float: left;
  font-size: 36rpx;
  font-weight: 400;
  color: #272832;
  line-height: 50rpx;
}
.friend-list .friend-list-r .top .time {
  float: right;
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
  line-height: 50rpx;
}
.friend-list .message {
  font-size: 28rpx;
  color: rgba(39, 40, 50, 0.6);
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

